---
import Plato from "../components/Plato.astro";
import PlatoController from "../controllers/PlatoController";

const PlatoControllerInstance = new PlatoController();

const platos = await PlatoControllerInstance.getCena();
---

<div class="tab-pane fade" id="menu-dinner">
  <div class="tab-header text-center">
    <p>Menu</p>
    <h3>Cena</h3>
  </div>
  <div class="container">
    <div class="row gy-5">
      {platos?.map((platos) => <Plato datos={platos} />)}
    </div>
  </div>
</div><!-- End Dinner Menu Content -->
